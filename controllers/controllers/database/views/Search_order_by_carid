        <table border="1">
            <tr>
              <th>OrderID</th>
              <th>UserID</th>
              <th>Pickup_location</th>
              <th>Date_time</th>
            </tr>
            <% @results.each do |record| %>
            <tr>
              <td> <%=h record[0] %></td>
              <td> <%=h record[1] %></td>
              <td> <%=h record[2] %></td>
              <td> <%=h record[3] %></td>
            </tr>
            <% end %>
        </table>
      <% end %>
    <% end %>
