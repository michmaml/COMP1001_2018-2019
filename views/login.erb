<!doctype html>
<html>
<head>
    <%= erb :header %>
</head>
<body>
    <div >
        <form action="/login" method="post">
            <p>Username: <input type="text" name="username"/></p>
            <br>
            <p>Password: <input type="password" name="password"/></p>
            <input type="submit" name="Submit"/>
        </form>
        
        <% unless @error.nil?%>
            <p><%= @error %></p>
            <p><%= params[:password] %></p>
        <%end%>
    </div>  
</body>
</html>

