<% @tweets.each do |tweet| %>
<article>		
	<button class="float-right"
			onclick="Twaxis.expand('.tweets', this.parentNode, this.parentNode.querySelector('.reply'))">
			Expand</button>
	<form method="post" action="/tweets">
		<input type="submit" name="action" class="float-right red" value="Reject">
		<input type="submit" name="action" class="float-right blue" value="Accept">
		
		<input type="hidden" name="OrderID" value="<%= tweet.id %>">
		<input type="hidden" name="Name" value="<%= tweet.user.name %>">
		<input type="hidden" name="Twitter_handle" value="<%= tweet.user.screen_name %>">
		<input type="hidden" name="CreatedAt" value="<%= tweet.created_at %>">
		<input type="hidden" name="Text" value="<%= tweet.text %>">
		
		<span class="tweet-user-name"><%= tweet.user.name %></span>
		<span class="tweet-user-screen_name">@<%= tweet.user.screen_name %></span>
		<span class="tweet-created_at"><%= tweet.created_at %></span>
		<div class="tweet-text"><%= tweet.text %></div>
		
		<section class="hidden tweets">
            <input type="text" name="Twitter_handle" placeholder="Twitter Handle">
            <input type="text" name="CarID" placeholder="Car ID">
			<input type="text" name="Date" placeholder="Date">
			<input type="text" name="Time" placeholder="Time">
			<input type="text" name="From" placeholder="From">
			<input type="text" name="To" placeholder="To">
		</section>
	</form>
</article>
<% end %>