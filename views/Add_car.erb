
<article>
	<h1>Add cars</h1>
	<form method="post" action="/Add_car">
		<input type="integer" name="Status" placeholder="Status will be automatically set" required>
		<input type="integer" name="Seats" placeholder="Eneter number of seats (not including driver's)" required>
		<input type="integer" name="Type" placeholder="Type should be text" required>
		<input type="submit" class="blue" value="Submit">
	</form>
</article>    
    <article>
        <button class="float-right red"
			onclick="alert('This delete one car.')">
			Delete</button>
    
        <table>
            <tr>
                 <th>Car types</th>
                </tr>
             <tr>
                    <th>Suv: 0</th>
                    <th>Sport: 1</th>
                    <th>Limo: 2</th>
                    <th>Compact: 3</th>
               </tr>
             <tr>
                    <th>Convertible: 4</th>
                    <th>Mini-bus: 5</th>
                    <th>Sedan: 6</th>
                    <th>Other: 7</th>
            </tr>
    </table>
        <br />
        <table>
            <tr>
                 <th>Car Status</th>
                </tr>
             <tr>
                    <th>Available: 0</th>
                    <th>Unavailable: 1</th>
                    <th>Busy: 2</th>
                   
    </table>
        <br />
    <table>
		<tr>
			<th>CarID</th>
            <th>Status</th>
            <th>Type</th>
            <th>Seats</th>
			
		</tr>      

          <% unless $all.nil? %>

       <% $all.each do |car| %>
		<tr>
            <td> <%= car["CarID"] %></td>
           	 <% if car["Status"].eql?(0) %>
                <td> Available</td>
            <% elsif car["Status"].eql?(1) %>
                <td> Unavailable</td>
            <% elsif car["Status"].eql?(2)%>
                <td> Busy</td>
            <% end %>
             <% if car["Type"].eql?(0) %>
                <td> Suv</td>
            <% elsif car["Type"].eql?(1) %>
                <td> Sport</td>
            <% elsif car["Type"].eql?(2) %>
                <td> Limo</td>
            <% elsif car["Type"].eql?(3) %>
                <td> Compact</td>
            <% elsif car["Type"].eql?(4) %>
                <td> Convertible</td>
            <% elsif car["Type"].eql?(5) %>
                <td> Mini-bus</td>
            <% elsif car["Type"].eql?(6) %>
                <td> Sedan</td>
            <% elsif car["Type"].eql?(7) %>
                <td> Other</td>
            
            <% end %>
            <td> <%= car["Seats"] %></td>
			
		</tr>
        

        <% end %>
	</table> 
 <% end %>
</article>
